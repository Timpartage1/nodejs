            <i class="bi bi-envelope-fill me-2 text-primary"></i> Email
        </label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Your Email" required>
    </div>
    <!-- Subject -->
    <div class="col-12">
        <label for="subject" class="form-label">
            <i class="bi bi-chat-text-fill me-2 text-primary"></i> Subject
        </label>
        <input type="text" class="form-control" name="subject" id="subject" placeholder="Message Subject" required>
    </div>
    <!-- Message -->
    <div class="col-12">
        <label for="message" class="form-label">
            <i class="bi bi-pencil-fill me-2 text-primary"></i> Message
        </label>
        <textarea class="form-control" id="message" rows="5" name="message" placeholder="Write your message here..." required></textarea>
    </div>
    <!-- Alert for messages -->
    <div id="formAlert" class="col-12 text-center mt-3" style="display: none;"></div>
    <!-- Submit Button -->
    <div class="col-12 text-center">
        <button type="submit" id="submitButton" class="btn btn-primary px-5 py-2">
            <span id="submitText"><i class="bi bi-send-fill me-2"></i> Send Message</span>
            <span id="submitLoader" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
        </button>
    </div>
</form>

<script>
    document.getElementById('contactForm').addEventListener('submit', async function (e) {
        e.preventDefault(); // Prevent default form submission
        const form = e.target;
        const formData = new FormData(form);
        const submitButton = document.getElementById('submitButton');
        const submitText = document.getElementById('submitText');
        const submitLoader = document.getElementById('submitLoader');
        const formAlert = document.getElementById('formAlert');

        // Show loader and disable button
        submitText.style.display = 'none';
        submitLoader.classList.remove('d-none');
        submitButton.disabled = true;

        try {
            const response = await fetch(form.action, {
                method: 'POST',
                body: new URLSearchParams(formData),
            });
            const result = await response.json();

            // Display success or error message
            formAlert.style.display = 'block';
            formAlert.className = result.success ? 'alert alert-success' : 'alert alert-danger';
            formAlert.innerText = result.message;

            if (result.success) form.reset(); // Clear form on success
        } catch (error) {
            formAlert.style.display = 'block';
            formAlert.className = 'alert alert-danger';
            formAlert.innerText = 'An error occurred. Please try again.';
        } finally {
            // Hide loader and enable button
            submitText.style.display = 'inline';
            submitLoader.classList.add('d-none');
            submitButton.disabled = false;
        }
    });
</script>

  

